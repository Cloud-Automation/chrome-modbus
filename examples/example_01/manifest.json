{
    "name": "Chrome Modbus Example 01",
    "description": "Chrome Modbus Example",
    "version": "0.0.2",
    "manifest_version": 2,
    "permissions": [ 
        "power"
    ],
    "app": {
        "background": {
            "scripts": [ "js/background.js" ]
        }
    },
    "sockets": {
        "tcp": {
            "connect": "*:*"
        }
    },
    "kiosk_enabled" : true,
    "kiosk_only" : true
}
